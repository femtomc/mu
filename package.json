{
	"name": "mu-monorepo",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"typecheck": "tsc -p tsconfig.json --noEmit && tsc -p packages/web/tsconfig.json --noEmit",
		"fmt": "biome format --write .",
		"lint": "biome lint .",
		"web:dev": "cd packages/web && bun run dev",
		"web:build": "cd packages/web && bun run build",
		"web:test": "bun run web:build && cd packages/web && bun run e2e",
		"check": "biome check --write --error-on-warnings . && bun run typecheck && bun test"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"bun-types": "^1.3.9",
		"typescript": "^5.9.2"
	}
}
